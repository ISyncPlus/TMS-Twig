{% extends 'base.twig' %}

{% block title %}Log in - TicketWave{% endblock %}

{% block content %}
<div class="flex min-h-[calc(100vh-8rem)] items-center justify-center bg-[#302C42] px-6 py-12">
  <div class="w-full max-w-6xl">
    <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
      <div class="relative hidden overflow-hidden rounded-[1em] bg-linear-to-br from-[#8176AF] to-[#C0B7E8] p-12 lg:flex lg:flex-col lg:justify-center">
        <div class="glow-circle pulse absolute -right-20 -top-20 size-64 rounded-full bg-white"></div>
        <div class="glow-circle pulse absolute -bottom-20 -left-20 size-80 rounded-full bg-white/90"></div>
        <div class="relative z-10">
          <div class="mb-6">
            <div class="ticket-badge mb-4">
              <!-- simple ticket SVG to match the React icon -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" class="w-8 h-8">
                <path d="M21 10v4a2 2 0 0 1-2 2h-1a2 2 0 0 0 0 4H6a2 2 0 0 0 0-4H5a2 2 0 0 1-2-2v-4a2 2 0 0 1 2-2h1a2 2 0 0 0 0-4h12a2 2 0 0 0 0 4h1a2 2 0 0 1 2 2z"/>
              </svg>
            </div>
          </div>
          <h2 class="mb-4 text-4xl text-white">Welcome Back to TicketWave</h2>
          <p class="text-lg text-white/90">Sign in to access your ticket management dashboard and streamline your support workflow.</p>
        </div>
      </div>

      <div>
        <div class="rounded-[1em] border-[#C0B7E8]/10 bg-[#3D3654] p-6 shadow-lg shadow-black/20 sm:p-8">
          <div class="mb-6 text-center sm:mb-8">
            <h1 class="gradient-text text-3xl">Log In</h1>
            <p class="mt-2 text-[#B1B1B1]">Enter your credentials to continue</p>
            <p class="mt-3 text-sm text-[#B1B1B1]">Test credentials: demo@user.com / password123</p>
          </div>

          <form method="post" action="/login" novalidate>
            <div class="space-y-4">
              <label class="block text-[#E0E0E0]">Email</label>
              <input id="email" name="email" type="email" placeholder="you@example.com" class="rounded-[1em] border-[#C0B7E8]/10 bg-[#302C42] text-[#E0E0E0] placeholder:text-[#B1B1B1] w-full p-3" />
              <p id="email-error" class="text-red-400 text-sm hidden" role="alert"></p>

              <label class="block text-[#E0E0E0]">Password</label>
              <input id="password" name="password" type="password" placeholder="Enter your password" class="rounded-[1em] border-[#C0B7E8]/10 bg-[#302C42] text-[#E0E0E0] placeholder:text-[#B1B1B1] w-full p-3" />
              <p id="password-error" class="text-red-400 text-sm hidden" role="alert"></p>
            </div>

            <div class="mt-6">
              <button type="submit" class="w-full gradient-button rounded-[1em] py-3">Log In</button>
            </div>
          </form>

          <p class="mt-6 text-center text-[#B1B1B1]">Don't have an account? <a href="/signup" class="text-[#C0B7E8] hover:underline">Sign up</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
